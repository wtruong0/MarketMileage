{
    "manifest_version": 3,
    "name": "MarketMileage",
    "description": "Swiftly estimate fair car pricings on Facebook Marketplace using a DeepSeek API, all embedded on the listing page.",
    "version": "3.2",
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "declarativeContent"
    ],
    "host_permissions": [
        "https://www.facebook.com/marketplace/*"
    ],
    "action": {
        "default_popup": "popup.html", 
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}