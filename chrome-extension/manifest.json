{
    "manifest_version": 3,
    "name": "MarketMileage",
    "description": "Allows you to estimate a fair value for cars on Facebook Marketplace with AI oversight using a DeepSeek API.",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://www.facebook.com/marketplace/*"
    ],
    "action": {
        "default_popup": "popup.html", 
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["*://*.facebook.com/marketplace/*", "*://*.facebook.com/*/marketplace/*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ]
}